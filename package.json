{
  "name": "mrms",
  "version": "1.0.0",
  "description": "Meeting Resolution Management System",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test jest --coverage --detectOpenHandles --forceExit",
    "ci:test": "NODE_ENV=test jest --ci --runInBand --coverage --detectOpenHandles --forceExit",
    "clean": "rm -rf build && mkdir build",
    "build-server": "babel -d ./build ./server -s",
    "build": "npm run clean && npm run build-server",
    "start": "node ./build/index.js",
    "server": "NODE_ENV=development nodemon --exec babel-node ./server/index.js",
    "migrate": "node_modules/.bin/sequelize db:migrate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/niomwungeri-fabrice/mrms.git"
  },
  "keywords": [
    "Meetings",
    "Resolution",
    "Tasks",
    "Management"
  ],
  "author": "Fabrice NIYOMWUNGERI",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/niomwungeri-fabrice/mrms/issues"
  },
  "homepage": "https://github.com/niomwungeri-fabrice/mrms#readme",
  "dependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/node": "^7.2.2",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@hapi/joi": "^15.0.3",
    "bcrypt": "^3.0.6",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "express": "^4.17.0",
    "express-joi-validator": "^2.0.1",
    "express-validator": "^5.3.1",
    "pg": "^7.11.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "^5.8.6",
    "sequelize-cli": "^5.4.0"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.17.2",
    "jest": "^24.8.0",
    "nodemon": "^1.19.0",
    "supertest": "^4.0.2"
  }
}
